{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "assets/**/*.{ts,json,hbs}",
        "watchAssets": true,
        "outDir": "dist"
      }
    ],
    "deleteOutDir": true
  }
}