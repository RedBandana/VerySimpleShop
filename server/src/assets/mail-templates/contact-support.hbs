<html lang='{{i18nLang}}'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'emails.contactSupport.subject'}}</title>
  </head>

  <body style="font-family: 'Segoe UI', Arial, sans-serif; font-size: 16px; color: #000; padding: 0; margin: 0;">
    <div class='container' style="padding: 40px;">
      <div class='main' style="padding: 0; margin: 0;">
        <div class='header' style="font-size: 32px; margin-bottom: 20px;">{{t 'emails.contactSupport.header' (args userName=userName)}}</div>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.ticketEmail'}} <b>{{ticketEmail}}</b></p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.subject'}} <b>{{subject}}</b></p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{message}}</p>
        <br style="margin-bottom: 20px;" />
        <hr style="margin-bottom: 20px;" />
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.userName'}} {{userName}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.userId'}} {{userId}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.userEmail'}} {{userEmail}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.companyName'}} {{companyName}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.companyId'}} {{companyId}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.companyType'}} {{companyType}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.packageType'}} {{packageType}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.fields.packageFeatures'}}</p>
        <ul class='list-bold' style="padding: 0; list-style-type: none; margin: 20 0 0 40px; font-weight: bold;">
          {{safeString (list packageFeatures)}}
        </ul>
      </div>

      <div class='footer' style="margin-top: 20px;">
        <a class='footer-title' href='{{t "emails.common.websiteUrl"}}' style="font-size: 24px; text-decoration: none; color: #000; padding: 0; margin: 0;">
          {{t 'general.common.app'}}
        </a>
      </div>
    </div>
  </body>

</html>
