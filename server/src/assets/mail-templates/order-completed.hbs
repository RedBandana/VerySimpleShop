<html lang='{{i18nLang}}'>

<head>
  <meta charset='UTF-8' />
  <meta name='viewport' content='width=device-width, initial-scale=1.0' />
  <title>{{t 'emails.orderCompleted.subject'}}</title>
</head>

<body style="font-family: 'Segoe UI', Arial, sans-serif; font-size: 16px; color: #000; padding: 0; margin: 0;">
  <div class='container' style="padding: 40px;">
    <div class='main' style="padding: 0; margin: 0;">
      <div class='header' style="font-size: 32px; margin-bottom: 20px;">{{t 'emails.orderCompleted.header'}}</div>
      <p style="padding: 0; margin: 0 0 20px 0;">{{safeString
          (t 'emails.orderCompleted.p1' (args companyName=companyName packageType=packageType product=product))
        }}</p>
      <p style="padding: 0; margin: 0 0 20px 0;">{{safeString (t 'emails.orderCompleted.p2')}}</p>
      <ul class='list-bold' style="margin-left: 40px; font-weight: bold; padding: 0; margin: 0 0 20px 0;">
        {{safeString (list packageFeatures)}}
      </ul>
    </div>

    <div class='footer' style="margin-top: 20px;">
      <a class='footer-title' href='{{t "emails.common.websiteUrl"}}' style="font-size: 24px; text-decoration: none; color: #000; padding: 0; margin: 0;">
        {{t 'general.common.app'}}
      </a>
    </div>
  </div>
</body>

</html>
