<html lang='{{i18nLang}}'>

  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{t 'emails.orderPaymentFailed.subject'}}</title>
  </head>

  <body style="font-family: 'Segoe UI', Arial, sans-serif; font-size: 16px; color: #000; padding: 0; margin: 0;">
    <div class='container' style="padding: 40px;">
      <div class='main' style="padding: 0; margin: 0;">
        <div class='header' style="font-size: 32px; margin-bottom: 20px;">{{t 'emails.orderPaymentFailed.header'}}</div>
        <p style="padding: 0; margin: 0 0 20px 0;">{{safeString (t 'emails.orderPaymentFailed.p1' (args companyName=companyName))}}</p>
        <p style="padding: 0; margin: 0 0 20px 0;">{{t 'emails.common.possibleMistake'}}</p>
      </div>

      <div class='footer' style="margin-top: 20px;">
        <a class='footer-title' href='{{t "emails.common.websiteUrl"}}' style="font-size: 24px; text-decoration: none; color: #000; padding: 0; margin: 0;">
          {{t 'general.common.app'}}
        </a>
      </div>
    </div>
  </body>

</html>
